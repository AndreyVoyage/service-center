{
"compilerOptions": {
"target": "ES2022",
"module": "ESNext",
"moduleResolution": "bundler",
"strict": true,
"skipLibCheck": true,
"forceConsistentCasingInFileNames": true,
"resolveJsonModule": true,
"allowJs": true,
"esModuleInterop": true,
"isolatedModules": true,
"incremental": true,
"declaration": true,
"declarationMap": true,
"outDir": "dist",
"baseUrl": ".",
"paths": { "@sc/ui": ["../ui/src"] }
},
"exclude": ["node_modules", "dist"]
}